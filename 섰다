import random

# 결과가 들어갈 리스트 생성
결과 = []

# 플레이어 수 정하기
while True :
    실행횟수 = int(input('몇 명이서 "섰다"를 즐기시겠습니까?'))

    if 실행횟수 > 4 :
        print("4명이 최대인원입니다.")
        continue
    else :
        break

# 화투패의 종류
화투패 = ['1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '1월 광',
    '2월 열끗', '3월 광', '4월 열끗', '5월 열끗', '6월 열끗', '7월 열끗', '8월 광', '9월 열끗', '10월 열끗']


for 번째 in range(1, 실행횟수 + 1) :

    # 화투 두 장을 뽑는다.
    화투1 = random.choice(화투패)
    화투2 = random.choice(화투패)

    # 화투패 중복 확인
    while 화투1 == 화투2:
        화투1 = random.choice(화투패)
        화투2 = random.choice(화투패)

    # 사용한 화투패는 삭제
    화투패.remove(화투1)
    화투패.remove(화투2)

    # 화투 두 장의 결과를 오름차순으로 정렬
    족보 = [화투1, 화투2]
    족보.sort()

    if 족보[0] == "10월" or 족보[0] == "10월 열끗" :
        족보[0], 족보[1] = 족보[1], 족보[0]

    if 족보[0] == "10월 열끗" and 족보[0] == "10월" :
        족보[0], 족보[1] = 족보[1], 족보[0]

    # 쉼표를 기준으로 문자 나누기
    족보 =  tuple(족보)
    print("플레이어",번째, "의 족보는", 족보[0],"그리고",족보[1])

    # 광땡

    # 38광땡 여부 확인
    삼팔광땡 = [("3월 광", "8월 광")]

    if 족보 in 삼팔광땡:
        결과.append("삼팔광땡")

    # 13광땡 여부 확인
    일삼광땡 = [("1월 광", "3월 광")]

