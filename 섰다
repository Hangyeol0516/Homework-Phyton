    # if (결과[번째-1] == "암행어사") :
    #     결과[번째-1] = 1

print(결과)
    
# 특수 족보 발동 조건 확인
if ("구사" in 결과) :
        if 결과 in 16 or 결과 in 17 or 결과 in 18 or 결과 in 19 or 결과 in 20 or 결과 in 21 or 결과 in 22 or 결과 in 23 or 결과 in 24 or 결과 in 25 or 결과 in 26 or 결과 in 27 or 결과 in 28 :
            결과[번째-1] = 1
        else :
            print("1땡 이상의 족보가 존재하지 않으므로 무승부입니다.")

if ("멍텅구리 구사" in 결과) :
        if 결과 in 25 or 결과 in 26 or 결과 in 27 or 결과 in 28 :
            결과[번째-1] = 1
        else :
            print("1땡 이상의 족보가 존재하지 않으므로 무승부입니다.")  
    
# 결과
승자 = 0
높은패 = -1

for i in range(len(결과)) :
    if 결과[i] > 높은패 :
        높은패 = 결과[i]
        승자 = i + 1

print(결과)
print("승자는",승자,"번째 플레이어","입니다.")
